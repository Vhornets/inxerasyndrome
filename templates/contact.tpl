<div class="col-xs-12">
	<form role="form" method="post" action="" enctype="multipart/form-data">
		<div class="form-group">
			<p class="help-block">Name</p>
			<input type="text" class="form-control input-sm" placeholder="Name" name="name">
		</div>

		<div class="form-group">
			<p class="help-block">Email</p>
			<input class="form-control input-sm" type="text" name="email" placeholder="email">
		</div>

		<div class="form-group">
			<p class="help-block">Message</p>
			<textarea class="form-control input-sm" name="message" cols="30" rows="10" placeholder="Message"></textarea>
		</div>

		<div class="form-group">
			<button type="submit" class="btn btn-default">Send</button>
		</div>
	</form>
</div>